{
    "name": "neos/limp",
    "description": "The Limp - less is more PHP.",
    "keywords": ["framework", "limp", "starter", "simple"],
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/pedra/limp/wiki",
    "authors": [{
        "name": "Bill Rocha",
        "email": "prbr@ymail.com"
    }],
    "config": {
        "vendor-dir": "php/vendor",
        "bin-dir": "php/vendor/bin",
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": ["/doc", "/*.json", "/.git", "/*.md"]
    },
    "require": {
        "php": ">=5.4.0",
        "neos/limp": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database",
            ".app/lib"
        ],
        "psr-4": {
            "App\\": ".app/",
            "Lib\\": ".app/lib/",
            "Model\\": ".app/model/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php .app/limp optimize"
        ],
        "post-update-cmd": [
            "php .app/limp optimize"
        ],
        "post-create-project-cmd": [
            "php .app/limp key:generate"
        ]
    }
}
